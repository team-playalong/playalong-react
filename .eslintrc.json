{
    "extends": "airbnb",
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "arrow-body-style": "off",
      "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/tools/**/*.js", "**/*.test.js", "**/*.spec.js"]}],
      "padded-blocks": "off",
      "arrow-parens": "off"
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "jasmine"
    ],
    "env": {
      "jasmine": true,
      "browser": true
    }
}
